extends layout

block content
  h1= title
  p Welcome to #{title}
  if user
    p Hello, #{user.username}
    a(href="/logout") Logout
  else
    a(href="/login") Login
  div(id="block", class="block")
  p select effects
    button(id="scaling-button") 拡大縮小
    button(id="moving-button") 移動
    button(id="hide-button") 隠す
    button(id="show-button") 現す
  script(src="/javascripts/bundle.js")